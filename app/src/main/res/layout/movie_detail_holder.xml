<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="10sp"
        android:text="Movie name"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView

        android:id="@+id/tvMovieTagLine"
        style="@style/DetailTheme"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMovieDurationText"
            style="@style/DetailThemeLabels"
            android:text="@string/duration" />

        <TextView
            android:id="@+id/tvMovieDuration"
            style="@style/DetailTheme"
            android:layout_toRightOf="@id/tvMovieDurationText"
            android:text="Duration" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMovieReleaseDateext"
            style="@style/DetailThemeLabels"
            android:text="@string/relaseDate"

            />

        <TextView
            android:id="@+id/tvMovieReleaseDate"
            style="@style/DetailTheme"
            android:layout_toRightOf="@id/tvMovieReleaseDateext"
            android:text="Release Date" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMovieGenreText"
            style="@style/DetailThemeLabels"
            android:text="@string/genre"

            />

        <TextView
            android:id="@+id/tvMovieGenre"
            style="@style/DetailTheme"
            android:layout_toRightOf="@id/tvMovieGenreText"
            android:text="Genre" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMovieSynopsisText"
            style="@style/DetailThemeLabels"
            android:text="@string/synopsis"

            />

        <TextView
            android:id="@+id/tvMovieSynopsis"
            style="@style/DetailTheme"
            android:layout_below="@+id/tvMovieSynopsisText"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Synopsis" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp">

        <RelativeLayout
            android:id="@+id/rvMoviePopularity"
            style="@style/DetailTheme"
            android:gravity="center">

            <TextView
                android:id="@+id/tvMoviePopularityText"
                style="@style/DetailThemeLabels"
                android:text="@string/popularity" />

            <TextView
                android:id="@+id/tvMoviePopularity"
                style="@style/DetailTheme"
                android:layout_below="@id/tvMoviePopularityText"
                android:layout_marginLeft="50dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/rvMoviePopularity"
            android:gravity="center">

            <TextView
                android:id="@+id/tvMovieRatingText"
                style="@style/DetailThemeLabels"
                android:text="@string/rating" />

            <TextView
                android:id="@+id/tvMovieRating"
                style="@style/DetailTheme"
                android:layout_below="@id/tvMovieRatingText"
                android:layout_marginLeft="30dp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>